<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ble_main_bg"
    android:layout_height="match_parent">


    <include layout="@layout/common_title_bar"/>


    <com.bonlala.widget.layout.SettingBar
        android:id="@+id/unitKmSettingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_leftText="公英制"
        android:layout_marginTop="@dimen/dp_15"
        app:bar_leftTextSize="18sp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:bar_lineVisible="true"
        app:bar_rightDrawable="@mipmap/right_arrow" />


    <com.bonlala.widget.layout.SettingBar
        android:id="@+id/unitTempSettingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_leftText="温度单位"
        android:layout_marginTop="@dimen/dp_15"
        app:bar_leftTextSize="18sp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:bar_lineVisible="true"
        app:bar_rightDrawable="@mipmap/right_arrow" />



</LinearLayout>