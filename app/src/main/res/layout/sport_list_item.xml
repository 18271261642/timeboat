<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/sport_item_view"
    android:layout_marginLeft="@dimen/margin_size_15"
    android:layout_marginRight="@dimen/margin_size_15"
    android:layout_marginTop="@dimen/margin_size_5"
    android:padding="@dimen/margin_size_20"
    android:layout_marginBottom="@dimen/margin_size_5"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/btn_corner_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/sport_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/running_icon" />

        <LinearLayout
            android:id="@+id/sport_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:layout_marginRight="@dimen/margin_size_20"
            android:layout_toEndOf="@+id/sport_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sport_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跑步"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_3"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/distance_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1200米"
                    android:textColor="@color/orange_end"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/use_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_5"
                    android:text="56分18"
                    android:textColor="@color/orange_end"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/use_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_5"
                    android:text="5次"
                    android:textColor="@color/orange_end"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>

        <ImageView

            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_5"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>



</LinearLayout>