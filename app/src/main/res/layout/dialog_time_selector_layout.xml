<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/timeCancelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black90"
            android:text="取消"
            android:textSize="@dimen/sp_18" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/timeSelectConfirmTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:textColor="@color/black90"
            android:padding="@dimen/dp_5"
            android:text="确定"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">


        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <com.bonlala.widget.view.StringScrollPicker
                android:id="@+id/hourPicker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                app:spv_is_circulation="false"
                app:spv_max_text_size="@dimen/sp_25"
                app:spv_min_text_size="@dimen/sp_20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center"
                android:background="#50EBEBEB"/>
        </FrameLayout>



        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <com.bonlala.widget.view.StringScrollPicker
                android:id="@+id/minuterPicker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                app:spv_is_circulation="false"
                app:spv_max_text_size="@dimen/sp_25"
                app:spv_min_text_size="@dimen/sp_20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center"
                android:background="#50EBEBEB"/>

        </FrameLayout>



    </LinearLayout>


</LinearLayout>