<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_date_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginTop="@dimen/margin_size_15"
    android:background="@color/ble_main_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/left_arrow_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_size_40"
        android:padding="@dimen/margin_size_15"
        android:src="@mipmap/left_arrow" />

    <TextView
        android:id="@+id/date_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/margin_size_15"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/right_arrow_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_size_40"
        android:padding="@dimen/margin_size_15"
        android:src="@mipmap/right_arrow" />
</RelativeLayout>