<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/ble_main_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_solidColor="@color/white"
    app:shape_radius="@dimen/dp_10"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical"
    android:padding="@dimen/dp_5"

    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请允许TimeBoat APP使用“位置权限”"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black"
        android:padding="@dimen/dp_5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为了您能够搜索到您附近的蓝牙手表，我们需要获取您设备所在的位置信息，在您同意后，您可以使用APP搜索手机附近的蓝牙手表，搜索到后进行连接，没有授权可能导致无法搜索到蓝牙手表。"
        android:textColor="@color/black95"
        android:textSize="@dimen/sp_15"
        android:padding="@dimen/dp_5"/>


</com.hjq.shape.layout.ShapeLinearLayout>